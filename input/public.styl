	padding-bottom 50px
	h3
		font-size 22px
		color #cccccc
		line-height 2
		border-bottom 1px solid #cccccc	
		margin-bottom 15px
	.text
		padding-left 30px
		width 400px
		color #666
		h4
			font-size 20px
			line-height 2
		.date
			font-size 12px
			line-height 1
		p
			padding-top 10px
			font-size 20px
			line-height 1.5
			height 60px
			overflow hidden
		.list
			margin-top 10px
			padding-top 10px
			border-top 1px solid #cccccc
			font-size 16px
			color #666666
			line-height 30px
			width 100%
			a
				padding-left 20px
				background url('http://via.placeholder.com/10x10') left center no-repeat
				width 100%
				box-sizing border-box
	
	&.right
		h3
			span
				display block
				width 300px
				margin 0 auto	
		.content
			width 300px
			margin 0 auto
		p
			padding-top 20px
			font-size 14px
			line-height 20px
			overflow hidden
			height 60px
			overflow hidden
