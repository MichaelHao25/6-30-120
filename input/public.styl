.w{max-width: 1210px;width: 100%;margin: 0 auto;}
body{
	font-size: 100%;
}

.header
	position absolute
	left 0
	right 0
	top 0
	z-index 10
	.h100
		height 100px
	.brand
		height 100%
		width 560px
		background url('') center center no-repeat
	.search-box
		padding:  30px 0
		height 40px
		font-size 0
		input 
			border none
			outline none
			border-radius 0
			vertical-align middle
		.text
			width 200px
			height 40px
			font-size 14px
			color #3050a6
			padding 9px 10px
			line-height 20px
			border 1px solid #fff
			box-sizing border-box
			background none
		.submit
			height 40px
			width 40px
			background #3050a6 url('http://via.placeholder.com/20x20') center center no-repeat
	.menu
		a
			width 12.5%
			height 45px
			background #000000
			font-size 14px
			color #ffffff
			transition 0.3s
			line-height 45px
			text-align center
			&:hover
			&.active
				background #1d378b
				color #ffffff
.banner
	a
		display block
		height 500px
		background  url('') center center no-repeat
		
.nav
	border-bottom 1px solid #ccc
	.scroll
		padding-left 30px
		background url('http://via.placeholder.com/25x25') left center no-repeat
		line-height 60px
		font-size 14px
		color #000000
.product-show
	h3
		padding 30px 0
		font-size 32px
		color #000000
		text-align center
		small
			text-transform uppercase
			display block
			font-size 15px
			color #cccccc
	.option
		background #d6d4d5
		h4
			width 190px
			height 80px
			box-sizing border-box
			padding-top 10px
			font-size 26px
			color #ffffff
			text-align center
			background #1c388d
			small
				text-transform uppercase
				display block
				font-size 15px
				color #fff
		a
			margin 25px 0 25px 20px
			height 30px
			width 120px
			background #ffffff
			color #000000
			line-height 30px
			border 1px solid #666666
			text-align center
	.tel
		background #a2a2a2
		height 80px
		text-transform uppercase
		padding 15px 20px
		box-sizing border-box
		span
			display block
			font-size 16px
			color #ffffff
			&+span
				font-size 22px
				color #7775a8
	.list
		padding-bottom 70px
		.item
			width 33.33%
			padding-top 30px
			color #666666
			.content
				width 355px
				margin 0 auto
				text-align center
				line-height 1.5
			.title
				font-size 30px
				padding 10px 0
			.sub-title
				padding-bottom 20px
				font-size 12px
			a
				display block
				margin 0 auto
				width 100px
				height 30px
				border 1px solid #cccccc
				font-size 16px
				text-align center
				line-height 30px

.w66
	width 70%
